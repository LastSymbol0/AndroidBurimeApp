<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:visibility="visible">



  <TextView
      android:id="@+id/head"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="0"
      android:layout_column="1"
      android:padding="10dp"
      android:textSize="15sp"
      android:textStyle="bold"
      tools:layout_conversion_absoluteHeight="19dp"
      tools:layout_conversion_absoluteWidth="46dp"
      tools:layout_editor_absoluteX="58dp"
      tools:layout_editor_absoluteY="8dp"
      tools:text="Header" />

  <TextView
      android:id="@+id/line1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="1"
      android:layout_column="1"
      android:padding="3dp"
      tools:layout_conversion_absoluteHeight="19dp"
      tools:layout_conversion_absoluteWidth="124dp"
      tools:layout_editor_absoluteX="58dp"
      tools:layout_editor_absoluteY="27dp"
      tools:text="line 1" />

  <TextView
      android:id="@+id/line2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="2"
      android:layout_column="1"
      android:padding="3dp"
      tools:layout_conversion_absoluteHeight="19dp"
      tools:layout_conversion_absoluteWidth="179dp"
      tools:layout_editor_absoluteX="58dp"
      tools:layout_editor_absoluteY="46dp"
      tools:text="@tools:sample/lorem" />

  <TextView
      android:id="@+id/line3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="3"
      android:layout_column="1"
      android:padding="3dp"
      tools:layout_conversion_absoluteHeight="19dp"
      tools:layout_conversion_absoluteWidth="126dp"
      tools:layout_editor_absoluteX="58dp"
      tools:layout_editor_absoluteY="84dp"
      tools:text="@tools:sample/lorem" />

  <TextView
      android:id="@+id/line4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="4"
      android:layout_column="1"
      android:padding="3dp"
      tools:layout_conversion_absoluteHeight="19dp"
      tools:layout_conversion_absoluteWidth="179dp"
      tools:layout_editor_absoluteX="58dp"
      tools:layout_editor_absoluteY="65dp"
      tools:text="@tools:sample/lorem" />

  <TableRow android:background="#cccccc"
      android:padding="5dp">

    <ImageView
        android:id="@+id/userpic"
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:layout_row="5"
        android:layout_column="0"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="84dp"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@tools:sample/avatars" />

  <TextView
      android:id="@+id/from_username_list"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_row="6"
      android:layout_column="0"
      android:padding="3dp"
      android:textSize="13sp"
      android:textStyle="italic"
      tools:layout_editor_absoluteX="58dp"
      tools:layout_editor_absoluteY="65dp"
      tools:text="username" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="2"
        android:padding="3dp"
        android:textAllCaps="false"
        android:textStyle="italic"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="179dp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="65dp"
        tools:text="01/01/2019" />
  </TableRow>
</TableLayout>
